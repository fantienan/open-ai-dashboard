{
  "name": "ai-server",
  "version": "0.6.0",
  "description": "AI Server for AI Dashboard",
  "type": "module",
  "files": ["build"],
  "scripts": {
    "build:src": "tsup --config tsup.config.all.ts",
    "build:watch": "tsup --config tsup.config.all.ts --watch",
    "build:sea": "node --experimental-sea-config sea-config.json && node -e \"require('fs').copyFileSync(process.execPath, '../../bin/ai-server.exe')\" && npx postject ../../bin/ai-server.exe NODE_SEA_BLOB sea-prep.blob --sentinel-fuse NODE_SEA_FUSE_fce680ab2cc467b6e072b8b5df1996b2 && npx rimraf sea-prep.blob build",
    "build": "pnpm gen-sea-config && pnpm build:src && pnpm build:sea",
    "gen-sea-config": "tsx scripts/gen-sea-config.ts",
    "type:check": "tsc --noEmit",
    "dev": "chcp 65001 && cross-env NODE_ENV=development tsx watch --clear-screen=false src/server.ts",
    "start": "chcp 65001 && cross-env NODE_ENV=production node build/server.cjs",
    "db:check": "drizzle-kit check",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:pull": "drizzle-kit pull",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:up": "drizzle-kit up"
  },
  "dependencies": {
    "@ai-dashboard/common": "file:../common",
    "@ai-sdk/deepseek": "0.2.14",
    "@ai-sdk/openai": "1.3.22",
    "@fastify/cors": "11.0.1",
    "@fastify/postgres": "6.0.2",
    "@types/pg": "8.15.2",
    "ai": "4.3.16",
    "better-sqlite3": "11.10.0",
    "cors": "2.8.5",
    "dotenv": "16.5.0",
    "dotenv-expand": "12.0.2",
    "drizzle-orm": "0.44.1",
    "drizzle-zod": "^0.7",
    "fastify": "5.3.3",
    "fastify-plugin": "^5.0.1",
    "fastify-zod-openapi": "4.1.2",
    "find-config": "1.0.0",
    "fs-extra": "11.3.0",
    "ky": "^1.8.1",
    "node-fetch": "3.3.2",
    "pg": "8.16.0",
    "pino": "9.7.0",
    "pino-pretty": "13.0.0",
    "pino-roll": "^3.1.0",
    "server": "1.0.41",
    "shell-quote": "1.8.2",
    "spawn-rx": "5.1.2",
    "ws": "8.18.2",
    "zod": "^3.24.1",
    "zod-openapi": "^4.2.4",
    "zod-to-json-schema": "^3.24.5"
  },
  "devDependencies": {
    "@types/better-sqlite3": "7.6.13",
    "@types/cors": "2.8.18",
    "@types/find-config": "1.0.4",
    "@types/fs-extra": "11.0.4",
    "@types/node": "22.15.0",
    "@types/ws": "8.18.1",
    "cross-env": "7.0.3",
    "drizzle-kit": "0.31.0",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-pino": "^2.2.2",
    "fastify-type-provider-zod": "5.0.1",
    "glob": "^11.0.2",
    "rcedit": "^4.0.1",
    "rimraf": "^6.0.1",
    "tsup": "8.5.0",
    "tsx": "4.19.4",
    "typescript": "5.8.3"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
